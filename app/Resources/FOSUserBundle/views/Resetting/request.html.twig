{% extends "base.html.twig" %}

{% block content %}
{% trans_default_domain 'FOSUserBundle' %}

<div id="form-wrapper" class="row">
    <div class="col-md-12">
        <div class="h1 text-center">Introduce tu email</div>
    </div>
    <div class="col-md-4 col-md-offset-4">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div>
                <input class="form-control" type="text" id="username" name="username" required="required" placeholder="Email" />
            </div>
            <div class="mt5">
                <input class="btn btn-primary btn-block" type="submit" value="Solicitar password" />
            </div>
        </form>
    </div>
</div>
{% endblock content %}
